#!Jinja2
[cylc]
    UTC mode = True
[scheduling]
    initial cycle point = 2000
    final cycle point = 2000
    [[dependencies]]
        [[[P1Y]]]
            graph = "loser:fail => rehab => done"
[runtime]
    [[done]]
        script = sleep 1
    [[loser]]
        script = false
    [[rehab]]
        script = """
            cylc set "${CYLC_WORKFLOW_NAME}//${CYLC_TASK_CYCLE_POINT}/loser"
            sleep 1
        """
